@model Coursework.Models.RsaModel

<h2>RSA Шифрование</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="InputText"></label>
        <textarea asp-for="InputText" class="form-control"></textarea>
        <span asp-validation-for="InputText" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PublicKey"></label>
        <textarea asp-for="PublicKey" class="form-control" rows="5"></textarea>
        <span asp-validation-for="PublicKey" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrivateKey"></label>
        <textarea asp-for="PrivateKey" class="form-control" rows="10"></textarea>
        <span asp-validation-for="PrivateKey" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Результат</label>
        <textarea readonly class="form-control">@Model.OutputText</textarea>
    </div>

    <button type="submit" name="action" value="encrypt" class="btn btn-primary">Зашифровать</button>
    <button type="submit" name="action" value="decrypt" class="btn btn-secondary">Расшифровать</button>
    <a asp-action="GenerateKeys" class="btn btn-info">Сгенерировать ключи</a>
</form>